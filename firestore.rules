rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /observations/{date} {
      allow read: if true;
      allow write: if request.auth.uid != null;
    }
    match /maxTemperatures/{date} {
      allow read: if true;
      allow write: if request.auth.uid != null;
    }
  }
}
